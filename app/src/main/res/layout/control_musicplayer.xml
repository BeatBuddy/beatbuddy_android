<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:id="@+id/musicplayer_cover_art"
        android:src="@drawable/header_default"
        android:scaleType="centerCrop"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="4dp">

        <TextView
            android:id="@+id/musicplayer_song_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Waves"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"/>
        <TextView
            android:id="@+id/musicplayer_song_artist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Joey Bada$$"
            android:layout_below="@id/musicplayer_song_title"/>
        <TextView
            android:id="@+id/musicplayer_song_album"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1999."
            android:layout_below="@id/musicplayer_song_artist"/>

        <TextView
            android:id="@+id/musicplayer_song_timeleft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-1:04"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"/>

    </RelativeLayout>
</LinearLayout>